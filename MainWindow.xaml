<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonMess" Content="Сообщение" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" Width="130" Height="40" Click="ButtonMess_Click"/>
        <TextBox x:Name="textBox1" Width="150" Height="30" VerticalAlignment="Top" Margin="0 ,10, 0, 0" />
        <Button x:Name="button1"  Width="100" Height="30"  VerticalAlignment="Top" Content="Кликни" Click="Button_Click" Margin="0,71,0,0">
            <Button.Background>
                <SolidColorBrush Opacity="0.5" Color="Red"></SolidColorBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button2" Width="250" Height="40" Margin="0,260,0,0">
            <Button.Content>
                <local:Phone Name="Lumia 950" Price="700"></local:Phone>
            </Button.Content>
        </Button>
    </Grid>
</Window>
